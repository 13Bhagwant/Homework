<%- include("../partials/header") %>
<% 
    if (cohorts.length > 0) { 
        for (let cohort of cohorts) { 
%>
  <div class="card mb-4">
    <div class="card-body">
      <h3 class="card-title"><img src="<%= cohort.logoUrl %>" alt="<%= cohort.name %> logo" class="img-thumbnail team-logo rounded-circle mr-3" height="72px" width="72px"><%= cohort.name %></h3>
      <p class="card-text"><%= cohort.members %></p>
      <a href="/cohorts/<%= cohort.id %>" class="btn btn-primary">Show Cohort</a>
    </div>
  </div>
<% } } else { %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title my-4">The List is Empty</h5>
      <a href="/cohorts/new" class="btn btn-primary mt-3">New Cohort</a>
    </div>
  </div>
  <% } %>
<%- include("../partials/footer") %>